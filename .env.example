# Environment Variables for Bahai Life Coach Agent

# LLM Provider Configuration
# Options: openai, ollama, huggingface, gemini
LLM_PROVIDER=gemini

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_LOCATION=us-central1
GEMINI_TIMEOUT=300

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4.5-preview
TEMPERATURE=0.7
MAX_TOKENS=2000

# Ollama Configuration (for local LLM usage)
OLLAMA_URL=http://localhost:11434

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Flask Configuration
FLASK_SECRET_KEY=bahai-life-coach-secret-key
FLASK_PORT=5555

# Optional Database Configuration
USE_DATABASE=False
DATABASE_URL=sqlite:///conversations.db

# Google Integration Configuration
ENABLE_GOOGLE_INTEGRATION=False
# Path to Google OAuth credentials file downloaded from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=credentials.json
# Comma-separated list of Google API scopes
GOOGLE_API_SCOPES=https://www.googleapis.com/auth/calendar.readonly,https://www.googleapis.com/auth/tasks
# Timezone for date parsing
GOOGLE_TIMEZONE=America/Los_Angeles

# Memory Configuration
ENABLE_MEMORY_TRACKING=False
MEMORY_STORAGE_PATH=memory_storage.json

# Speech Configuration
ENABLE_SPEECH=True
# Voice to use (leave empty for browser default)
SPEECH_VOICE=
# Speech rate (1.0 = normal speed)
SPEECH_RATE=1.0
# Speech pitch (1.0 = normal pitch)
SPEECH_PITCH=1.0
# Seconds of silence before auto-sending speech input
SPEECH_PAUSE_THRESHOLD=5.0

# Logging Configuration
DEBUG=False

# Optional: Database Configuration
# DATABASE_URL=sqlite:///life_coach.db 